<script asp-location="Footer">
    $(document).ready(function () {
        $(".mobile-nav-toggle").on("click", function (e) {
            e.preventDefault();
            e.stopPropagation();
            $(".header-menu").addClass("show")
        })
        $(".top-menu.mobile .sublist-toggle").on("click",function(e){
            e.preventDefault();
            e.stopPropagation();
            var parentLink = $(this).parent("a");
            parentLink.siblings(".sublist").addClass("show");
        })
        $(".parent-back-link a").on("click",function(e){
            e.preventDefault();
            e.stopPropagation();
            var parentSublist = $(this).parents(".sublist");
            parentSublist.removeClass("show")
        })
        $(".close-topmenu a").on("click", function (e) {
            e.preventDefault();
            e.stopPropagation();
            $(".header-menu, .header-menu .sublist").removeClass("show")
        })

        $(".top-menu.mobile").on("click", function (e) {
            e.stopPropagation();
        })
        $(".header-menu").on("click", function (e) {
            e.stopPropagation();
            $(".header-menu, .header-menu .sublist").removeClass("show")
        })
    })
</script>