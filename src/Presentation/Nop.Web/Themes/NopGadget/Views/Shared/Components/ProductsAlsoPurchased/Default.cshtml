@model IList<ProductOverviewModel>

@if (Model.Count > 0)
{
    var guid = Guid.NewGuid().ToString().Replace('-', '_');
    <div class="related-carousel">

        <div class="swiper" id="related-products-@(guid)" dir="@Html.GetUIDirection(!await Html.ShouldUseRtlThemeAsync())">
            <div class="title" id="related-products-title-@(guid)">
                <strong>@T("Products.AlsoPurchased")</strong>

                @if (true)
                {
                    <div class="swiper-nav">
                        <div class=" icon-right-arrow-2"></div>
                        <div class=" icon-left-arrow-2"></div>
                    </div>
                }
            </div>
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="item-box swiper-slide">@await Html.PartialAsync("_ProductBox", item)</div>
                }
            </div>
        </div>
    </div>


    <script asp-location="Footer">
        $(document).ready(function () {
            var carousel@(guid) = new Swiper("#related-products-@(guid)", {
                slidesPerView: "auto",
                lazy: false,
                @if (false)
                {
                    <text>
                            autoplay: {
                            delay: 3000,
                            disableOnInteraction: false,
                            pauseOnMouseEnter: true,
                        },
                    </text>
                }
                @if (true)
                {
                    <text>
                            navigation: {
                            nextEl: "#related-products-title-@(guid) .icon-right-arrow-2",
                            prevEl: "#related-products-title-@(guid) .icon-left-arrow-2",
                        },
                    </text>
                }});
        });
    </script>
}